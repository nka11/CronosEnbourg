<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="cronosenbourg">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="listen"/>
        <xs:element ref="instance"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="listen">
    <xs:complexType>
      <xs:attribute name="iface" use="required" type="xs:NMTOKEN"/>
      <xs:attribute name="port" use="required" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="instance">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="mbean"/>
        <xs:element maxOccurs="unbounded" ref="output"/>
      </xs:sequence>
      <xs:attribute name="host" use="required" type="xs:NCName"/>
      <xs:attribute name="interval" use="required" type="xs:integer"/>
      <xs:attribute name="name" use="required" type="xs:NCName"/>
      <xs:attribute name="output" use="required" type="xs:NCName"/>
      <xs:attribute name="port" use="required" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="mbean">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="attribute"/>
      </xs:sequence>
      <xs:attribute name="name" use="required" type="xs:anyURI"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="attribute">
    <xs:complexType>
      <xs:attribute name="name" use="required" type="xs:NCName"/>
      <xs:attribute name="property" use="required" type="xs:NCName"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="output">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="item"/>
        <xs:element minOccurs="0" ref="oper"/>
      </xs:sequence>
      <xs:attribute name="className" use="required"/>
      <xs:attribute name="file" use="required" type="xs:NCName"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="item">
    <xs:complexType>
      <xs:attribute name="ind" use="required" type="xs:integer"/>
      <xs:attribute name="propertyref" use="required" type="xs:NCName"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="oper">
    <xs:complexType>
      <xs:attribute name="arg1propertyref" use="required" type="xs:NCName"/>
      <xs:attribute name="arg2propertyref" use="required" type="xs:NCName"/>
      <xs:attribute name="ind" use="required" type="xs:integer"/>
      <xs:attribute name="type" use="required" type="xs:NMTOKEN"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
